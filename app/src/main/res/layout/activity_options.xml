<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mhoumine.our_project.OptionsActivity">

    <Button
        android:text="Add Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddActivityButton"
        android:textSize="24sp"
        android:layout_marginTop="78dp"
        android:background="@android:drawable/btn_default"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp"
        android:onClick="onClick (OptionsActivity)" />

    <Button
        android:text="Add Business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddBusinessButton"
        android:textSize="24sp"
        android:layout_below="@+id/AddActivityButton"
        android:layout_alignLeft="@+id/AddActivityButton"
        android:layout_alignStart="@+id/AddActivityButton"
        android:layout_marginTop="59dp"
        android:background="@android:drawable/btn_default" />
</RelativeLayout>
