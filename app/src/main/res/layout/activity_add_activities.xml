<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_activities"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal">
    tools:context="com.example.mhoumine.our_project.AddActivitiesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:scrollbars="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Type of Activity:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/typeActivitySpinner"
                android:prompt="@android:drawable/btn_dropdown"
                android:layout_marginTop="10dp"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:popupBackground="@android:drawable/editbox_dropdown_light_frame"
                android:layout_weight="0.33" />

            <TextView
                android:text="Country:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/countryEditText"
                android:background="@android:drawable/editbox_background"
                android:layout_weight="0.04" />

            <TextView
                android:text="Start Date:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:elevation="1dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/StartDateEditText"
                android:background="@android:drawable/editbox_background"
                android:drawableRight="@android:drawable/ic_menu_my_calendar" />

            <TextView
                android:text="End Date:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:elevation="1dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/EndDateEditText"
                android:background="@android:drawable/editbox_background"
                android:drawableRight="@android:drawable/ic_menu_my_calendar" />

            <TextView
                android:text="Cost:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:elevation="2dp"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/CostEditText"
                android:background="@android:drawable/editbox_background" />

            <TextView
                android:text="Description:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:elevation="2dp"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/DescriptionEditText"
                android:background="@android:drawable/editbox_background" />

            <TextView
                android:text="Business ID:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:elevation="2dp"
                android:layout_marginTop="15dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idSpinner"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:popupBackground="@android:drawable/editbox_dropdown_light_frame" />

            <Button
                android:text="Add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AddActivityButton" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
